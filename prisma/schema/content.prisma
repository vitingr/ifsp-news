model Article {
  id           String         @id @default(uuid())
  slug         String         @unique
  title        String
  description  String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  authorId     String
  author       User           @relation(fields: [authorId], references: [id])
  likedArticle LikedArticle[]

  @@map("articles")
}

model Category {
  id          String   @id @default(uuid())
  slug        String   @unique
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("categories")
}
